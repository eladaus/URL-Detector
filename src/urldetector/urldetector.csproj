<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Dale Holborow, LinkedIn</Authors>
    <Company>eladaus oy</Company>
    <Product>eladaus.urldetector</Product>
    <Description>C# port of the LinkedIn engineering team's open source Java library to detect urls from a body of text. For original description, see https://engineering.linkedin.com/blog/2016/06/open-sourcing-url-detector--a-java-library-to-detect-and-normali and also https://github.com/linkedin/URL-Detector</Description>
    <PackageLicenseExpression></PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/eladaus/URL-Detector</PackageProjectUrl>
    <RepositoryUrl>https://github.com/eladaus/URL-Detector</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>urldetector parser eladaus linkedin</PackageTags>
    <PackageId>eladaus.urldetector</PackageId>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageReleaseNotes>Make project dotnetstandard for portability</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.txt" Link="LICENSE.txt">
      <PackagePath></PackagePath>
      <Pack>True</Pack>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GitVersionTask" Version="5.1.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.Memory" Version="4.5.3" />
  </ItemGroup>

</Project>
